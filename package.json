{
  "name": "node-ts",
  "version": "0.0.0",
  "author": "tahie",
  "description": "Node.js & TypeScript starter",
  "packageManager": "pnpm@9.4.0",
  "engines": {
    "node": ">=18.11",
    "pnpm": ">=7.27"
  },
  "scripts": {
    "dev": "pnpm /dev:.*/",
    "dev:build": "esbuild dev.ts ./src --bundle --outdir=dist --packages=external --platform=node --sourcemap --watch",
    "dev:run": "node --inspect -r ./dist/dev.js --watch dist/src",
    "build": "esbuild index=./src --bundle --minify --outdir=dist --packages=external --platform=node",
    "start": "node dist"
  },
  "dependencies": {
    "esbuild": "^0.23.0",
    "axios": "^1.7.7",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^20.14.9",
    "nodemon": "^3.1.7",
    "typescript": "^5.7.2"
  }
}
